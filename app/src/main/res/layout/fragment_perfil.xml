<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.PerfilFragment">

    <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.TextButton"
            android:id="@+id/btn_alt_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Alterar Foto"/>

    <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_alt_foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_1">

        <LinearLayout
                android:orientation="vertical" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Ph Positivo"
                      android:layout_margin="10dp"
                      android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:text="um.email@aleatorio.com"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:id="@+id/cv_2"
            app:layout_constraintTop_toBottomOf="@id/cv_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical" android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Estatísticas"
                      android:layout_margin="10dp"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:text="Vitorias: 0"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:text="Jogos: 0"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:text="Frenemy: Danny 🍌"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toBottomOf="@id/cv_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="@style/AppTheme.Button"
            android:id="@+id/btn_sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sair"/>

</androidx.constraintlayout.widget.ConstraintLayout>